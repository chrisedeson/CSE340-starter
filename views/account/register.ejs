<!-- views/account/register.ejs -->
<div class="account-register-container">
  <h1><%= title %></h1>

  <% if (errors) { %>
  <ul class="error">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <!-- Flash messages (if any) -->
  <%- messages() %>

  <!-- Registration Form -->
  <form action="/account/register" method="post" class="register-form">
    <div class="form-group">
      <label for="account_firstname">First Name:</label>
      <input
        type="text"
        id="account_firstname"
        name="account_firstname"
        placeholder="John"
        required
      />
    </div>

    <div class="form-group">
      <label for="account_lastname">Last Name:</label>
      <input
        type="text"
        id="account_lastname"
        name="account_lastname"
        placeholder="Doe"
        required
      />
    </div>

    <div class="form-group">
      <label for="account_email">Email:</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        placeholder="you@example.com"
        required
      />
    </div>

    <div class="form-group">
      <label for="account_password">Password:</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        placeholder="••••••••••••"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      />
      <small class="password-hint">
        Password must be at least 12 characters, with 1 uppercase letter, 1
        number, and 1 special character.
      </small>
    </div>

    <button type="submit" class="btn-submit">Register</button>
  </form>

  <p class="login-prompt">
    Already have an account?
    <a href="/account/login" class="login-link">Login here</a>
  </p>
</div>
