<div class="account-management">
  <h2 class="page-title">Welcome, <%= accountData.account_firstname %>!</h2>

  <% if (messages().trim().length > 0) { %>
    <div class="flash-message success">
      <%- messages() %>
    </div>
  <% } %>

  <ul class="account-details">
    <li><strong>First Name:</strong> <%= accountData.account_firstname %></li>
    <li><strong>Last Name:</strong> <%= accountData.account_lastname %></li>
    <li><strong>Email:</strong> <%= accountData.account_email %></li>
  </ul>

  <div class="account-actions">
    <a href="/account/update" class="btn primary">Update Account Information</a>
    <a href="/account/update-password" class="btn secondary">Change Password</a>
  </div>
</div>
