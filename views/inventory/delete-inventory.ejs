<div class="form-container"> 
  <h1>Delete <%= inv_make %> <%= inv_model %></h1>

  <p class="warning"><strong>Confirm Deletion</strong> - This action is permanent and cannot be undone.</p>

  <%- messages() %>

  <% if (errors) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/delete" method="post">
    <div class="form-group">
      <label for="inv_make">Make</label>
      <input type="text" name="inv_make" id="inv_make" value="<%= inv_make %>" readonly />
    </div>

    <div class="form-group">
      <label for="inv_model">Model</label>
      <input type="text" name="inv_model" id="inv_model" value="<%= inv_model %>" readonly />
    </div>

    <div class="form-group">
      <label for="inv_year">Year</label>
      <input type="number" name="inv_year" id="inv_year" value="<%= inv_year %>" readonly />
    </div>

    <div class="form-group">
      <label for="inv_price">Price</label>
      <input type="text" name="inv_price" id="inv_price" value="<%= inv_price %>" readonly />
    </div>

    <!-- Hidden field to submit the ID -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/inv" class="btn btn-secondary">Cancel</a>
  </form>
</div>
